{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "store": ["./src/store/store"]
    },
    "declaration": true,
    "declarationDir": "typings",
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "include": ["./src/typings/global.d.ts", "./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.tsx", "./src/**/*.vue"]
}
